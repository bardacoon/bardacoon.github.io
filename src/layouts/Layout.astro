---
import Header from "../components/Header.astro";
import { Font } from "astro:assets";
const { search } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <Font cssVariable="--ff-primary" preload />
        <Font cssVariable="--ff-secondary" preload />
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>Astro Basics</title>
    </head>
    <body>
        <Header search={search} />
        <main>
            <slot />
        </main>
    </body>
</html>

<style is:global>
    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }

    @view-transition {
        navigation: auto;
    }

    ::view-transition-old(*),
    ::view-transition-new(*) {
        width: 100%;
        height: 100%;
    }

    :where(h1, h2, h3, h4, h5, h6, button, input) {
        font: inherit;
    }

    :where(input[type="text"]) {
        padding: 0;
        background-color: transparent;
        border: none;
    }

    :root {
        --primary: #f9f4c6;
        --secondary: #000000;

        --fg: var(--secondary);
        --bg: var(--primary);
    }

    @media (prefers-color-scheme: dark) {
        :root {
            --fg: var(--primary);
            --bg: var(--secondary);
        }
    }

    a {
        color: inherit;
        text-decoration: none;
    }

    .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border-width: 0;
    }

    html {
        color: var(--fg);
        background-color: var(--bg);
        font-family: var(--ff-primary);
        padding-inline: 1.4375rem;
        padding-block: 0.75rem;
        padding-block-end: 10rem;

        @media screen and (width < 748px) {
            padding-inline: 1rem;
        }
    }

    .hidden {
        display: none;
    }
</style>
