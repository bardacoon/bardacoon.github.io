---
const { search } = Astro.props;
---

<header>
    {
        search ? (
            <h1 class="sr-only">Bardacoon</h1>
            <form id="search-form">
                <label aria-label="Search">
                    <input type="text" name="query" placeholder="Bardacoon" />
                </label>
                <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <path
                        d="M21 21L16.66 16.66"
                        stroke="currentColor"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    />
                    <path
                        d="M11 19C15.4183 19 19 15.4183 19 11C19 6.58172 15.4183 3 11 3C6.58172 3 3 6.58172 3 11C3 15.4183 6.58172 19 11 19Z"
                        stroke="currentColor"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    />
                </svg>
            </form>
    ): <h1><a href="/">Bardacoon</a></h1>
    }
</header>

<style>
    header {
        input,
        h1 {
                        font-size: 2rem;
                    font-family: var(--ff-secondary);
        }

        form {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 1rem;

            label {
                position: relative;
                width: 100%;

                &:has(:focus) {
                    &::after {
                        content: "";
                        position: absolute;
                        bottom: -3px;
                        left: 0;
                        width: 100%;
                        height: 1px;
                        background-color: var(--fg);
                    }
                }

                input {
                    width: 100%;
                    outline: none;

                    &::placeholder {
                        color: var(--fg);
                    }
                }
            }
        }
    }
</style>
